{
  "build":  [
    "composer install --no-dev",
    "cd web",
    "npm install",
    "bower install --production",
    "grunt build"
  ],
  "deploy": [
    "ln -s ../shared/.env ./.env",
    "ln -s ../shared/uploads ./uploads"
  ],
  "ignore": [
    "README.md",
    "composer.json",
    "composer.lock",
    "web/bower.json",
    "web/package.json",
    "web/Gruntfile.js",
    "web/.sass-cache/",
    "web/assets/",
    "web/node_modules/",
    "web/bower_components/"
  ]
}