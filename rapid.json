{
  "build":  [
    "composer install",
    "cd web",
    {
      "production":  [
        "npm install --no-dev",
        "bower install --production",
        "grunt build"
      ],
      "development": [
        "npm install",
        "bower install",
        "grunt dev"
      ]
    }
  ],
  "deploy": [
    "ln -s ../shared/.env ./.env",
    "ln -s ../shared/uploads ./uploads"
  ],
  "ignore": [
    "janniedeploy.json",
    "composer.json",
    "composer.lock",
    "web/bower.json",
    "web/package.json",
    "web/Gruntfile.js",
    "web/.sass-cache/",
    "web/assets/",
    "web/node_modules/",
    "web/bower_components/"
  ]
}